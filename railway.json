{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "workflow/python/Dockerfile"
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ALWAYS",
    "sleepApplication": true,
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1073741824
      }
    }
  }
}
